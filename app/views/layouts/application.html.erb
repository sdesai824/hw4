<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">	
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body class="pt-4">
  <div class="container">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/places">Places & Posts</a>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/places">Home</a>
          </li>
            <% if @current_user %>
              <li class="nav-item">
                <a class="nav-link" href="#"> Logged in as: <%= @current_user["username"] %></a>  
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            <% else %>
              <li class="nav-item">
                <a class="nav-link" href="/sessions/new">Login</a>
              <li class="nav-item">
                <a class="nav-link" href="/users/new">Sign Up</a>
            <% end %>
          </li>
        </ul>
    </div>
  </nav>


  <body>
    <div class="container">
      <div>
        <%= flash["notice"] %>
      </div>

    <%= yield %>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"</script>
</html>
