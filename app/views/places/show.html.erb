<h3><%= @place["name"] %> Posts</h3> 
<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Add a New Post</a>
</p>

<div class="container text-center">
  <div class="row">
            <%if @current_user%>
            <% for post in @posts %>
              <% if @current_user["id"] == post["user_id"] %>
                <div class="col-sm-3">
                  <h3><%= post["title"] %></h3>
                  <p><%= post["posted_on"] %></p>
                  <p><%= post["description"] %></p>
                </div>
              <%end %>
            <% end %>
            <%else%>
            Please Log In
            <%end%>
    </div>
  </div>
</div>

<p>
  <a href="/places">Back to All Places</a>
</p>
