<div class="mx-auto" style="width: 200px;">
  <div class="m-3">
      <h3><%= @place["name"] %> Posts</h3> 
  </div>
</div>

<div class="container text-center">
  <div class="row">
            <%if @current_user%>
            <% for post in @posts %>
              <% if @current_user["id"] == post["user_id"] %>
                <div class="col-md-4">
                  <h5><%= post["title"] %></h5>
                  <p><%= post["posted_on"] %></p>
                  <% if post.uploaded_image.attached? %>
                    <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
                  <% else %>
                    <img src="<%= post["image"] %>" class="img-fluid">
                  <% end %>
                  <p><%= post["description"] %></p>
                </div>
              <%end %>
            <% end %>
            <%else%>
            Please Log In
            <%end%>
    </div>
  </div>
</div>


<div class="m-3">
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Add a New Post</a>
</div>
  


<div class="m-3">
  <a href="/places" class="btn btn-secondary" tabindex="-1" role="button" aria-disabled="true">Back to All Places</a>
</div>

